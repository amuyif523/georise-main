{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",

    /* TypeScript Strictness */
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Build Output */
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true, // because we run directly with ts-node-dev

    /* Type Checking Performance */
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
